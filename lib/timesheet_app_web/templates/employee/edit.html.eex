<!-- lib/timesheet_app_web/templates/employee/edit.html.eex -->
<h1>Edit Employee</h1>
<%= form_for @changeset, Routes.employee_path(@conn, :update, @employee), [as: :employee], fn f -> %>
  <div class="field">
    <%= label f, :name %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>
  </div>

  <div class="field">
    <%= label f, :email %>
    <%= text_input f, :email %>
    <%= error_tag f, :email %>
  </div>

  <div class="field">
    <%= label f, :position %>
    <%= text_input f, :position %>
    <%= error_tag f, :position %>
  </div>

  <!-- Add more fields if needed -->

  <div class="actions">
    <%= submit "Update Employee" %>
  </div>
<% end %>
